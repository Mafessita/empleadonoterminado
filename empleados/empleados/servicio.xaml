<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="empleados.servicio"
             Title="servicio">
    <ScrollView>
        <StackLayout>
            <!--  Título de la sección  -->
            <Label
             Margin="10"
             FontAttributes="Bold"
             FontSize="Large"
             Text="Combos" />

            <CollectionView
             x:Name="CollectionViewCombos"
             Margin="10"
             ItemsLayout="VerticalGrid, 2">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                         Margin="5"
                         Padding="10"
                         CornerRadius="10"
                         HasShadow="True"
                         HeightRequest="250"
                         WidthRequest="160">
                            <VerticalStackLayout>

                                <!--  Imagen del producto  -->
                                <Image
                                 Margin="0,0,0,5"
                                 Aspect="AspectFill"
                                 HeightRequest="150"
                                 Source="{Binding Imagen}" />

                                <!--  Nombre del producto  -->
                                <Label
                                 Margin="0,0,0,5"
                                 FontAttributes="Bold"
                                 FontSize="16"
                                 HorizontalOptions="Start"
                                 Text="{Binding Nombre}"
                                 TextColor="Black" />

                                <!--  Calificación  -->
                                <Label
                                 FontSize="14"
                                 HorizontalOptions="Start"
                                 Text="{Binding Calificacion, StringFormat='Calificación: {0:F1}'}"
                                 TextColor="Gray" />

                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!--  Título de la sección  -->
            <Label
             Margin="10"
             FontAttributes="Bold"
             FontSize="Large"
             Text="Individuales" />

            <!--  Colección de productos "Individuales"  -->

            <CollectionView
             x:Name="CollectionViewIndividuales"
             Margin="10"
             ItemsLayout="VerticalGrid, 2">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                         Margin="5"
                         Padding="10"
                         CornerRadius="10"
                         HasShadow="True"
                         HeightRequest="250"
                         WidthRequest="160">
                            <VerticalStackLayout>

                                <!--  Imagen del producto  -->
                                <Image
                                 Margin="0,0,0,5"
                                 Aspect="AspectFill"
                                 HeightRequest="150"
                                 Source="{Binding Imagen}" />

                                <!--  Nombre del producto  -->
                                <Label
                                 Margin="0,0,0,5"
                                 FontAttributes="Bold"
                                 FontSize="16"
                                 HorizontalOptions="Start"
                                 Text="{Binding Nombre}"
                                 TextColor="Black" />

                                <!--  Calificación  -->
                                <Label
                                 FontSize="14"
                                 HorizontalOptions="Start"
                                 Text="{Binding Calificacion, StringFormat='Calificación: {0:F1}'}"
                                 TextColor="Gray" />

                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>



        </StackLayout>
    </ScrollView>
</ContentPage>